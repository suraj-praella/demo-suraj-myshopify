<link rel="stylesheet" href="{{ 'top-header.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'global.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'bootstrap.css' | asset_url }}">

{% if section.settings.show_top_header %}
  <div
    class="top-menu font-family-header w-100"
    style="background:{{section.settings.top_header_bg}}; color:{{section.settings.top_header_font_color}};"
  >
    <div class="top-menu-wrapper d-flex align-items-center container">
      <div class="row w-100">
        <div class="top-menu-left-section text-start col-md-6">
          <span>
            {{ section.settings.top_header_left_text }}
            <a href="{{section.settings.learn_more_link}}" target="_blank"><b>Learn More</b></a>
          </span>
        </div>
        <div class="top-menu-right-section ms-auto text-end col-md-6">
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="15"
              height="15"
              viewBox="0 0 15 15"
              fill="none"
            >
              <path
                d="M11.596 9.48488L13.4985 11.3874C13.7755 11.6644 13.7755 12.1134 13.4985 12.3904C12.0011 13.8878 9.63054 14.0562 7.93643 12.7857L7.07487 12.1395C5.47751 10.9415 4.05853 9.52249 2.86051 7.92512L2.21434 7.06356C0.943761 5.36946 1.11223 2.99888 2.60962 1.50149C2.88659 1.22452 3.33563 1.22452 3.6126 1.50149L5.51512 3.404C5.90564 3.79453 5.90564 4.42769 5.51511 4.81822L4.87802 5.45531C4.7518 5.58153 4.72051 5.77436 4.80034 5.93401C5.7233 7.77993 7.22007 9.2767 9.06599 10.1997C9.22564 10.2795 9.41847 10.2482 9.54469 10.122L10.1818 9.48488C10.5723 9.09436 11.2055 9.09436 11.596 9.48488Z"
                stroke="black"
              />
            </svg></span
          ><span
            ><b>Call Us: </b
            ><a
              class="top-menu-contant-tag"
              style="color:{{section.settings.top_header_font_color}};"
              href="tel:+{{section.settings.top_header_contact}}"
            >
              {{- section.settings.top_header_contact -}}
            </a>
          </span>
          <span>&nbsp;|&nbsp;</span>
          <a>Pickup at Warehouse</a>
          <span>&nbsp;|&nbsp;</span>
          <a href="#" style="color:{{section.settings.top_header_font_color}};">Customer Support</a>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Top Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_top_header",
      "label": "Show Top Header",
      "default": true
    },
    {
      "type": "color",
      "id": "top_header_bg",
      "label": "Background Color",
      "default": "#ff6e30"
    },
    {
      "type": "color",
      "id": "top_header_font_color",
      "label": "Font Color",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "top_header_left_text",
      "label": "Left Text",
      "default": "Visit out Outlet Store in Dallas, Texas!"
    },
    {
      "type": "url",
      "id": "learn_more_link",
      "label": "Learn More URL"
    },
    {
      "type": "text",
      "id": "top_header_contact",
      "label": "Contact Number",
      "default": "866-855-4285"
    }
  ]
}
{% endschema %}

