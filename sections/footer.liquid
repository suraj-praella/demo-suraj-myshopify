{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_footer",
      "label": "Show Footer",
      "default": true
    },
    {
      "type": "url",
      "id": "footer_map_link",
      "label": "Map Link"
    },
    {
      "type": "text",
      "id": "footer_address",
      "label": "Location",
      "default": "2671 Freewood Drive Dallas, Texas 75220"
    },
    {
      "type": "text",
      "id": "footer_contact_number",
      "label": "Contact Number",
      "default": "866-855-4285"
    },
    {
      "type": "text",
      "id": "footer_contact_timing",
      "label": "Contact Timing",
      "default": "M-F 8am-5pm CT"
    },
    {
      "type": "image_picker",
      "id": "footer_image",
      "label": "Footer Image"
    },
    {
      "type": "link_list",
      "id": "footer_company_menu",
      "label": "Company Menu"
    },
    {
      "type": "link_list",
      "id": "footer_resources_menu",
      "label": "Resources Menu"
    }
  ]
}
{% endschema %}
