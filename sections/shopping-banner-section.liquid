          "unit": "px",
          "label": "Font Size",
          "default": 15
        },
        {
          "type": "paragraph",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "large_banner_btn_label",
          "label": "Label",
          "default": "Label"
        },
        {
          "type": "color",
          "id": "large_banner_btn_bg",
          "label": "Background Color",
          "default": "#FF6E30"
        },
        {
          "type": "color",
          "id": "large_banner_btn_color",
          "label": "Font Color",
