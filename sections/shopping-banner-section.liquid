<link rel="stylesheet" href="{{ 'bootstrap.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'global.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'shopping-banner-section.css' | asset_url }}">

{%- assign large_banner = section.blocks | where: 'type', 'large_banner' -%}
{%- assign small_banner = section.blocks | where: 'type', 'small_banner' -%}

{%- if section.settings.show_banner_section -%}
  <section class="section-images-3-container" style="margin-top: {{ section.settings.banner_mt }}px;">
    <div class="container d-flex">
      {%- for block in large_banner -%}
        <div class="images-3-container">
          {%- if block.settings.large_banner_img != blank -%}
            <img
              src="{{ block.settings.large_banner_img | image_url }}"
              class="position-absolute w-100 h-100 top-0 start-0"
              width=""
              height=""
              loading="lazy"
            >

          {%- else -%}
            <img
              src="https://cdn.shopify.com/s/files/1/0842/4131/8197/files/flatbed-chain-collection.png?v=1698393161"
              class="position-absolute w-100 h-100 top-0 start-0"
              width=""
              height=""
              loading="lazy"
            >
          {%- endif -%}

          <div class="overlay" style="opacity: {{ block.settings.large_banner_bg_img_opacity }}%;"></div>
          <div
            class="triangle-orange d-block"
            style="border-bottom-color: {{ block.settings.large_banner_triangle_bg }}; opacity: {{ block.settings.large_banner_triangle_opacity }}%;"
          ></div>

          {%- if block.settings.large_banner_sec_image != blank -%}
            <img
              src="{{ block.settings.large_banner_sec_image | image_url }}"
              style="opacity: {{ block.settings.large_banner_sec_img_opacity }}%"
              class="image image-3"
              width=""
              height=""
              loading="lazy"
            >
          {%- else -%}
            <img
              style="opacity: {{ block.settings.large_banner_sec_img_opacity }}%"
              src="https://cdn.shopify.com/s/files/1/0842/4131/8197/files/flatbed-chain.png?v=1698392809"
              class="image image-3"
              width=""
              height=""
              loading="lazy"
            >
          {%- endif -%}

          <div
            class="text-and-btn-container d-flex flex-column"
            style="text-align: {{ block.settings.large_banner_text_alignment }};"
          >
            <span
              class="ls-75"
              style="color: {{ block.settings.large_banner_sub_heading_color }}; font-size: {{ block.settings.large_banner_sub_heading_size }}px;"
            >
              {{- block.settings.large_banner_sub_heading -}}
            </span>
            <h2
              style="color: {{ block.settings.large_banner_heading_color }}; font-size: {{ block.settings.large_banner_heading_size }}px;"
            >
              {{ block.settings.large_banner_heading }}
            </h2>
            <span
              style="color: {{ block.settings.large_banner_desc_color }}; font-size: {{ block.settings.large_banner_desc_size }}px;"
            >
              {{- block.settings.large_banner_desc -}}
            </span>
            <div>
              <a
                href="#"
                class="btn-orange"
                style="background-color: {{ block.settings.large_banner_btn_bg }}; color: {{ block.settings.large_banner_btn_color }}; font-size: {{ block.settings.large_banner_btn_size }}px;"
              >
                {{ block.settings.large_banner_btn_label }}
              </a>
            </div>
          </div>
        </div>
      {%- endfor -%}
      <div
        class="images-2-container-wrapper d-flex flex-column justify-content-between"
      >
        {%- for block in small_banner -%}
          <div class="images-2-container">
            {%- if block.settings.small_banner_bg_img != blank -%}
              <img
                src="{{ block.settings.small_banner_bg_img | image_url }}"
                class="position-absolute w-100 h-100 top-0 start-0"
                width=""
                height=""
                loading="lazy"
              >
            {%- else -%}
              <img
                src="https://cdn.shopify.com/s/files/1/0842/4131/8197/files/AdobeStock_Car_Preview_1.png?v=1698208496"
                class="position-absolute w-100 h-100 top-0 start-0"
                width=""
                height=""
                loading="lazy"
              >
            {%- endif -%}

            <div class="overlay" style="opacity: {{ block.settings.small_banner_bg_img_opacity }}%;"></div>

            {%- if block.settings.small_banner_sec_image != blank -%}
              <img
                src="{{ block.settings.small_banner_sec_image | image_url }}"
                style="opacity: {{ block.settings.small_banner_sec_image_opacity }}%;"
                class="image image-2"
                width=""
                height=""
                loading="lazy"
              >
            {%- else -%}
              <img
                src="https://cdn.shopify.com/s/files/1/0842/4131/8197/files/MC-ATV-Straps.png?v=1698392834"
                style="opacity: {{ block.settings.small_banner_sec_image_opacity }}%;"
                class="image image-2"
                width=""
                height=""
                loading="lazy"
              >
            {%- endif -%}

            <div
              class="text-and-btn-container d-flex flex-column"
              style="text-align: {{ block.settings.small_banner_text_alignment }};"
            >
              <p
                class="font-family-header"
                style="color: {{ block.settings.small_banner_heading_color }}; font-size: {{ block.settings.small_banner_heading_size }}px;"
              >
                {{ block.settings.small_banner_heading }}
              </p>
              <div>
                <a
                  href="#"
                  class="btn-orange"
                  style="color: {{ block.settings.small_banner_btn_color }}; background-color: {{ block.settings.small_banner_btn_bg }}; font-size: {{ block.settings.small_banner_btn_size }}px;"
                >
                  {{ block.settings.small_banner_btn_label }}
                </a>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>
{%- endif -%}

{% schema %}
